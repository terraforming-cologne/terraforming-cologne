<div class="mb-4">
  <%= tag.span t(".no_account_yet") %>
  <%= link_to t("signup"), :signup, class: "text-teal-700 underline decoration-2 hover:text-teal-500" %>
</div>

<%= form_with model: @login, url: :login, class: "flex flex-col gap-2" do |form| %>
  <%= render "shared/errors", form: form %>

  <div class="flex flex-col gap-1">
    <%= form.label :email_address %>
    <%= form.email_field :email_address, required: true, class: "rounded" %>
  </div>
  <div class="flex flex-col gap-1">
    <%= form.label :password %>
    <%= form.password_field :password, required: true, maxlength: 72, class: "rounded" %>
  </div>

  <div class="flex items-center justify-between">
    <div>
      <%= tag.span t(".password_forgotten") %>
      <%= link_to t(".reset"), %i[new password_reset], class: "text-teal-700 underline decoration-2 hover:text-teal-500" %>
    </div>
    <%=
      form.submit t("login"),
                  class: "inline-block cursor-pointer rounded-lg bg-teal-300 px-4 py-2 font-bold hover:bg-teal-400"
    %>
  </div>
<% end %>
