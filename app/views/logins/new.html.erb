<div class="mb-4">
  <%= tag.span t(".no_account_yet") %>
  <%= link_to t("signup"), :signup, class: "link" %>
</div>

<div class="mb-4">
  <%= tag.span t(".password_forgotten") %>
  <%= link_to t(".reset"), %i[new password_reset], class: "link" %>
</div>

<%= form_with model: @login, url: :login, class: "flex flex-col gap-2" do |form| %>
  <%= render "shared/errors", form: form %>

  <div class="flex flex-col gap-1">
    <%= form.label :email_address %>
    <%= form.email_field :email_address, required: true, autocomplete: "username", class: "rounded" %>
  </div>
  <div class="flex flex-col gap-1">
    <%= form.label :password %>
    <%=
      form.password_field :password,
                          required: true,
                          autocomplete: "current-password",
                          minlength: 8,
                          maxlength: 72,
                          class: "rounded"
    %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
