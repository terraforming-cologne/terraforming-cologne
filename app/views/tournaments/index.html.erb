<%= link_to t("create_tournament"), %i[new tournament], class: "link" %>

<div class="flex flex-col gap-8">
  <div>
    <h1 class="font-bold">Next</h1>
    <% if @next_tournament.present? %>
      <%= render @next_tournament %>
    <% else %>
      <span class="italic">No planned tournaments</span>
    <% end %>
  </div>

  <div>
    <h1 class="font-bold">Planned</h1>
    <% if @planned_tournaments.any? %>
      <%= render @planned_tournaments %>
    <% else %>
      <span class="italic">No planned tournaments</span>
    <% end %>
  </div>

  <div>
    <h1 class="font-bold">Previous</h1>
    <% if @previous_tournaments.any? %>
      <%= render @previous_tournaments %>
    <% else %>
      <span class="italic">No previous tournaments</span>
    <% end %>
  </div>
</div>
