<%= tag.h1 t(".heading"), class: "mb-4 text-xl font-bold" %>

<%= form_with model: @password, url: password_reset_path(params[:token]), class: "flex flex-col gap-2" do |form| %>
  <%= render "shared/errors", form: form %>

  <div class="flex flex-col gap-1">
    <%= form.label :password %>
    <%=
      form.password_field :password,
                          required: true,
                          autocomplete: "new-password",
                          minlength: 8,
                          maxlength: 72,
                          class: "rounded"
    %>
  </div>

  <div class="flex flex-col gap-1">
    <%= form.label :password_confirmation %>
    <%=
      form.password_field :password_confirmation,
                          required: true,
                          autocomplete: "new-password",
                          minlength: 8,
                          maxlength: 72,
                          class: "rounded"
    %>
  </div>

  <div class="flex">
    <%=
      form.submit class:
                    "ms-auto inline-block cursor-pointer rounded-lg bg-teal-300 px-4 py-2 font-bold hover:bg-teal-400"
    %>
  </div>
<% end %>
