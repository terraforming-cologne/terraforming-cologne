<%= tag.h1 t(".heading"), class: "mb-4 font-bold" %>

<%= form_with url: [:password_resets], class: "flex flex-col gap-2" do |form| %>
  <div class="flex flex-col gap-1">
    <%= form.label :email_address %>
    <%= form.email_field :email_address, required: true, autocomplete: "username", class: "rounded" %>
  </div>

  <div class="flex">
    <%# TODO: t(".submit") is needed here because we have a form without a model %>
    <%=
      form.submit t(".submit"),
                  class:
                    "ms-auto inline-block cursor-pointer rounded-lg bg-teal-300 px-4 py-2 font-bold hover:bg-teal-400"
    %>
  </div>
<% end %>
