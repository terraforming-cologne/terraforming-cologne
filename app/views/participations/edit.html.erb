<h1><%= t(".heading") %></h1>

<div class="flex flex-col gap-4">
  <%= render "form", participation: @participation %>

  <%= button_to t(".delete"),
      @participation,
      method: :delete,
      class: "btn btn-danger",
      data: {
        turbo_frame: "_top",
        turbo_confirm: t(".delete_confirm")
      },
      form_class: "self-end" %>
</div>
