<%= tag.h1 t(".heading"), class: "mb-4 font-bold" %>

<div class="mb-4">
  <%= render "form", participant: @participant %>
</div>

<div class="flex">
  <%=
    button_to t(".delete"),
              :participation,
              method: :delete,
              form_class: "ms-auto",
              class: "inline-block cursor-pointer rounded-lg bg-rose-400 px-4 py-2 font-bold hover:bg-rose-500",
              data: {
                turbo_frame: "_top",
                turbo_confirm: t(".delete_confirm"),
              }
  %>
</div>
