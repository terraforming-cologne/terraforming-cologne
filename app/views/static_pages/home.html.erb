<div class="flex flex-col gap-8">
  <div>
    <h1 class="text-center text-3xl font-bold">Terraforming Cologne</h1>
    <h2 class="text-center"><%= t(".terraforming_mars_tournament") %></h2>
  </div>

  <div>
    <%= render "welcome" %>
  </div>

  <div class="text-center">
    <% unless authenticated? && Current.user.participating? %>
      <%=
        link_to t(".register"),
                :register,
                class:
                  "inline-block cursor-pointer rounded-lg bg-teal-300 px-4 py-2 text-3xl font-bold hover:bg-teal-400"
      %>
    <% end %>
  </div>

  <div><%= render "quick_info" %></div>
  <div><%= render "rules" %></div>
  <div><%= render "scoring" %></div>
  <div><%= render "spirit" %></div>
  <div><%= render "registration" %></div>
  <div><%= render "getting_here" %></div>
</div>
